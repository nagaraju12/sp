<h1>Listing comments</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 
<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.title %></td>
    <td><%= link_to "Show", comment_path(comment) %></td>
    <td><%= link_to "Edit", edit_comment_path(comment) %></td>
    <td><%= link_to "Remove", comment_path(comment), method: :delete, data: { confirm: "Are you sure?" } %></td>

  </tr>
  <% end %>

</table>